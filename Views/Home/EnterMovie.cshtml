@model Mission06_Santilli.Models.Movie

@{
    ViewData["Title"] = "Enter Movie";
}

<div class="text-center">
    <h1 class="display-4">Add a Movie to Joel's Collection</h1>
    <p>Fill out the form below to expand the collection.</p>
</div>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6 mb-5">
        <form method="post" asp-action="EnterMovie">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Year" class="form-label">Year</label>
                <input asp-for="Year" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Director" class="form-label">Director</label>
                <input asp-for="Director" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="form-label">Rating</label>
                <select asp-for="Rating" class="form-control">
                    <option value="">Select a Rating</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Edited" class="form-check-input" type="checkbox" />
                <label asp-for="Edited" class="form-check-label">Edited (Yes/No)</label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LentTo" class="form-label">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label">Notes (Max 25 Characters)</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Add Movie</button>
            </div>
        </form>
    </div>
</div>